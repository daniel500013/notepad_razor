@page
@model notepad_razor.Pages.Auth.LoginModel
@{
	ViewData["Title"] = "Logowanie";
}

<div class="position-absolute top-50 start-50 text-center p-5 border shadow" style="transform: translateY(-75%) translateX(-50%)">
	<form method="post">
		<div class="mb-4">
			<h2>Logowanie</h2>
		</div>
	
		<div class="mt-3 mb-3">
			<input type="text" class="form-control" placeholder="Login" asp-for="UserModel.NickName" />
			<span class="text-danger" asp-validation-for="UserModel.NickName"></span>
		</div>
		<div class="mt-3 mb-3">
			<input type="password" class="form-control" placeholder="Hasło" asp-for="UserModel.Password" />
			<span class="text-danger" asp-validation-for="UserModel.Password"></span>
		</div>
		
		<input type="submit" class="d-block btn btn-primary w-100" value="Logowanie" />
	</form>
	<span class="text-danger">
		@Html.ValidationMessage("RegisterError")
	</span> 
</div>
@page
@model notepad_razor.Pages.Subjects.CreatePostModel
@{
}

<div>
	<form method="post">
		<input class="form-control d-block mt-3 mb-3" type="text" placeholder="Temat" asp-for="Post.Title"/>

		<textarea id="editor" asp-for="Post.Description"></textarea>

		<input type="submit" class="btn btn-primary mt-3 mb-3" value="Dodaj" />
	</form>

</div>

<script src="https://cdn.ckeditor.com/ckeditor5/34.1.0/classic/ckeditor.js"></script>
<script>
    ClassicEditor
        .create( document.querySelector( '#editor' ) )
        .catch( error => {
            console.error( error );
        } );
</script>